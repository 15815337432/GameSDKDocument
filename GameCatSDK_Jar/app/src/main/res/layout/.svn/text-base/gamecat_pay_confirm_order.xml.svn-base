<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical"
android:background="#90000000"
android:scrollbars="none"
android:clickable="true">


<LinearLayout
    android:layout_width="315dp"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/gamecat_dialog_shape"
    android:orientation="vertical">





        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:layout_centerHorizontal="true"
            >
            <ImageView
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/gamecatpay_close"
                />
            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认订单"
                android:textSize="18dp"
                android:textColor="@color/gamecat_color_333"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/gamecat_color_dedfe0" />






    <LinearLayout
        android:id="@+id/switch_login"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cp_discript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="游戏充值"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="@color/gamecat_color_333"

            />
        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="商品价格：300喵点"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/gamecat_color_777777"

            />
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/gamecat_color_dedfe0" />
        <RelativeLayout

            android:id="@+id/vouchers_list"
            android:layout_width="match_parent"
            android:layout_height="47dp"

            >
            <ImageView
                android:id="@+id/quan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:src="@drawable/gamecatpay_voucher"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="11dp"
                android:layout_toRightOf="@+id/quan"
                android:layout_centerVertical="true"
                android:text="代金券："
                android:textSize="18dp"
                android:textColor="@color/gamecat_color_333"

                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/vouchers_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="5dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/come_image"
                    android:text="不使用代金券"
                    android:textSize="14dp"

                    android:textColor="@color/gamecat_color_f74c31"

                    />
                <ImageView
                    android:id="@+id/come_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/gamecatpay_right"
                    />
            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"

            android:background="@color/gamecat_color_dedfe0" />


        <Button
            android:id="@+id/confirm_order_button"
            style="@style/gamecatpay_button_common"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="13dp"
            android:layout_marginLeft="13dp"
            android:text="确认订单" />


    </LinearLayout>



    </LinearLayout>

    </RelativeLayout>
